{-# LANGUAGE CPP #-}
#if __GLASGOW_HASKELL__ <= 708
{-# LANGUAGE OverlappingInstances #-}
#endif
{-# LANGUAGE GADTs, TypeSynonymInstances #-}
{-# LANGUAGE FlexibleInstances #-}
{-# OPTIONS_GHC -fno-warn-incomplete-patterns #-}

-- | Pretty-printer for PrintLang.
--   Generated by the BNF converter.

module PrintLang where

import qualified AbsLang
import Data.Char

-- | The top-level printing method.

printTree :: Print a => a -> String
printTree = render . prt 0

type Doc = [ShowS] -> [ShowS]

doc :: ShowS -> Doc
doc = (:)

render :: Doc -> String
render d = rend 0 (map ($ "") $ d []) "" where
  rend i ss = case ss of
    "["      :ts -> showChar '[' . rend i ts
    "("      :ts -> showChar '(' . rend i ts
    "{"      :ts -> showChar '{' . new (i+1) . rend (i+1) ts
    "}" : ";":ts -> new (i-1) . space "}" . showChar ';' . new (i-1) . rend (i-1) ts
    "}"      :ts -> new (i-1) . showChar '}' . new (i-1) . rend (i-1) ts
    ";"      :ts -> showChar ';' . new i . rend i ts
    t  : ts@(p:_) | closingOrPunctuation p -> showString t . rend i ts
    t        :ts -> space t . rend i ts
    _            -> id
  new i   = showChar '\n' . replicateS (2*i) (showChar ' ') . dropWhile isSpace
  space t = showString t . (\s -> if null s then "" else ' ':s)

  closingOrPunctuation :: String -> Bool
  closingOrPunctuation [c] = c `elem` closerOrPunct
  closingOrPunctuation _   = False

  closerOrPunct :: String
  closerOrPunct = ")],;"

parenth :: Doc -> Doc
parenth ss = doc (showChar '(') . ss . doc (showChar ')')

concatS :: [ShowS] -> ShowS
concatS = foldr (.) id

concatD :: [Doc] -> Doc
concatD = foldr (.) id

replicateS :: Int -> ShowS -> ShowS
replicateS n f = concatS (replicate n f)

-- | The printer class does the job.

class Print a where
  prt :: Int -> a -> Doc
  prtList :: Int -> [a] -> Doc
  prtList i = concatD . map (prt i)

instance {-# OVERLAPPABLE #-} Print a => Print [a] where
  prt = prtList

instance Print Char where
  prt _ s = doc (showChar '\'' . mkEsc '\'' s . showChar '\'')
  prtList _ s = doc (showChar '"' . concatS (map (mkEsc '"') s) . showChar '"')

mkEsc :: Char -> Char -> ShowS
mkEsc q s = case s of
  _ | s == q -> showChar '\\' . showChar s
  '\\'-> showString "\\\\"
  '\n' -> showString "\\n"
  '\t' -> showString "\\t"
  _ -> showChar s

prPrec :: Int -> Int -> Doc -> Doc
prPrec i j = if j < i then parenth else id

instance Print Integer where
  prt _ x = doc (shows x)

instance Print Double where
  prt _ x = doc (shows x)

instance Print AbsLang.Ident where
  prt _ (AbsLang.Ident i) = doc (showString i)

instance Print AbsLang.Module where
  prt i e = case e of
    AbsLang.M decls -> prPrec i 0 (concatD [prt 0 decls])

instance Print AbsLang.Value where
  prt i e = case e of
    AbsLang.ValueInt n -> prPrec i 0 (concatD [prt 0 n])
  prtList _ [] = concatD []
  prtList _ [x] = concatD [prt 0 x]
  prtList _ (x:xs) = concatD [prt 0 x, doc (showString ","), prt 0 xs]

instance Print [AbsLang.Value] where
  prt = prtList

instance Print AbsLang.Decl where
  prt i e = case e of
    AbsLang.ModDecl model -> prPrec i 0 (concatD [prt 0 model])
    AbsLang.RecDecl recipe -> prPrec i 0 (concatD [prt 0 recipe])
  prtList _ [] = concatD []
  prtList _ (x:xs) = concatD [prt 0 x, prt 0 xs]

instance Print [AbsLang.Decl] where
  prt = prtList

instance Print AbsLang.Model where
  prt i e = case e of
    AbsLang.Mod id layers -> prPrec i 0 (concatD [doc (showString "model"), prt 0 id, doc (showString "{"), prt 0 layers, doc (showString "}")])

instance Print AbsLang.Recipe where
  prt i e = case e of
    AbsLang.R id layers -> prPrec i 0 (concatD [doc (showString "recipe"), prt 0 id, doc (showString "{"), prt 0 layers, doc (showString "}")])
  prtList _ [] = concatD []
  prtList _ (x:xs) = concatD [prt 0 x, prt 0 xs]

instance Print [AbsLang.Recipe] where
  prt = prtList

instance Print AbsLang.Layer where
  prt i e = case e of
    AbsLang.Op ingredient hyperparams -> prPrec i 0 (concatD [prt 0 ingredient, prt 0 hyperparams])
    AbsLang.NamedRecipe id -> prPrec i 0 (concatD [prt 0 id])
  prtList _ [] = concatD []
  prtList _ [] = concatD []
  prtList _ [x] = concatD [prt 0 x]
  prtList _ (x:xs) = concatD [prt 0 x, prt 0 xs]
  prtList _ (x:xs) = concatD [prt 0 x, doc (showString "\n"), prt 0 xs]

instance Print [AbsLang.Layer] where
  prt = prtList

instance Print AbsLang.Ingredient where
  prt i e = case e of
    AbsLang.Relu -> prPrec i 0 (concatD [doc (showString "relu")])
    AbsLang.Conv -> prPrec i 0 (concatD [doc (showString "conv")])
    AbsLang.BatchNorm -> prPrec i 0 (concatD [doc (showString "batch_normalize")])

instance Print AbsLang.HyperParams where
  prt i e = case e of
    AbsLang.Hyps hyperparams -> prPrec i 0 (concatD [doc (showString "["), prt 0 hyperparams, doc (showString "]")])

instance Print [AbsLang.HyperParam] where
  prt = prtList

instance Print AbsLang.HyperParam where
  prt i e = case e of
    AbsLang.Stride values -> prPrec i 0 (concatD [doc (showString "strides"), doc (showString ":="), doc (showString "["), prt 0 values, doc (showString "]")])
  prtList _ [] = concatD []
  prtList _ [] = concatD []
  prtList _ [x] = concatD [prt 0 x]
  prtList _ (x:xs) = concatD [prt 0 x, prt 0 xs]
  prtList _ (x:xs) = concatD [prt 0 x, doc (showString ","), prt 0 xs]

